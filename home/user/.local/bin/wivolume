#!/bin/sh

current=$(amixer sget 'Master' | tail -n 1 | awk '{ print $5 }' | sed 's/\[\|\]\|\%//g')
change=5

case $1 in
	"status")
		echo "$current%"
		;;
	"inc") amixer sset Master $[ "$current" + "$change" ]% > /dev/null
		;;
	"dec") amixer sset Master $[ "$current" - "$change" ]% > /dev/null
		;;
	"pavu") pavucontrol
		;;
	"mixer") $TERM -e "alsamixer"
		;;
esac
