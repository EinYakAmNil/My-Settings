#!/bin/sh

mdir="$HOME/Musik"

case $1 in
    "clipboard")
	ytdl="yt-dlp --no-mtime -f ba -o $mdir/.raw/\"%(channel)s - %(title)s.%(ext)s\" \"$(xclip -selection clipboard -o)\""
    ;;
    "batch")
	ytdl="yt-dlp --no-mtime -f ba -o $mdir/.raw/\"%(channel)s - %(title)s.%(ext)s\" -a $HOME/Musik/.download.list"
    ;;
    *)
	exit 1
    ;;
esac

vim_rn="nvim .rename.sh"
vim_sync="nvim .sync.sh"
cd "$mdir/.raw"
sh -c "$TERM -e $ytdl"

# Prepare files in raw to be renamed.
echo "#!/bin/sh" > .rename.sh
for title in *
do
	echo "mv -vi \"$title\" \"$title\"" >> .rename.sh
done
sh -c "$TERM -e $vim_rn"

# Update and open the sync file.
# sh .rename.sh && ls .raw/ >> .sync.sh
# sh -c "$TERM -e $vim_sync"

# Start music tagger if it is not running already.
# [ -z $(pgrep picard) ] && picard .raw/* &
