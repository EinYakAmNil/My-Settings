#!/bin/sh

[ "$(acpi | awk '{ print $4 }' | sed 's/%\|,//g')" -lt "70" ] && notify-send "Kabel anschlie√üen, schlechte Batterie!" -i gnome-power-manager

case $BLOCK_BUTTON in
	1) notify-send "$(acpi)" -i gnome-power-manager
		;;
	2) st -e "$EDITOR" $0
		;;
esac

acpi | awk '{ print $4 }' | sed 's/,//'
